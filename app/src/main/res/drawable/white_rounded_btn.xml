<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/cyan_30ced1" />
            <stroke android:width="1dp" android:color="@color/cyan_30ced1" />
            <corners android:radius="50dp" />
        </shape>

    </item>

    <item>

        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="0.7dp" android:color="@android:color/black" />
            <corners android:radius="50dp" />
        </shape>

    </item>



</selector>